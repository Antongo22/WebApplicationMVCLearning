@page
@model TextEditorApp.Pages.EditTextModel
@{
    ViewData["Title"] = "Edit Text";
}

<h1>Edit Text</h1>

<form method="post">
    <textarea id="editor" name="Text">@Html.Raw(Model.SavedText)</textarea>
    <button type="submit">Save</button>
</form>

<p>@Model.Message</p>

<script src="https://cdn.tiny.cloud/1/pxd88ki9p3g5kqhd5xag8lesa025mnu0gp7zg7r4clhl69fd/tinymce/5/tinymce.min.js"
        referrerpolicy="origin">
</script>
<script>
    tinymce.init({
        selector: '#editor',
        plugins: 'advlist link lists table',
        toolbar: 'undo redo | styleselect | bold italic underline | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link table',
        menubar: false,
        height: 300,
    });
</script>